<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development (port 8069) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Add your computer's IP address here if testing on physical device -->
        <domain includeSubdomains="true">10.150.1.33</domain>
    </domain-config>
    
    <!-- Production domains - keep HTTPS only -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.beam.fun</domain>
        <domain includeSubdomains="true">beam.fun</domain>
    </domain-config>
</network-security-config>